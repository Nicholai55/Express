<div class="card">
    <h5 class="card-header">{{title}}</h5>
    <div class="card-body">
        <h5 class="card-title">Dados da Inscrição</h5>
        <form action="/edition/{{ id }}" method="post">
            <div class="mb-3">
                <label for="school" class="form-label">Escola:</label>
                <input type="text" class="form-control" id="school" name="school" value="{{ school }}">
            </div>
            <div class="mb-3">
                <label for="sex" class="form-label">Sexo:</label>
                <input type="text" class="form-control" id="sex" name="sex" value="{{ sex }}">
            </div>
            <div class="mb-3">
                <label for="guardian" class="form-label">Guardiao:</label>
                <input type="text" class="form-control" id="guardian" name="guardian"
                    value="{{ guardian }}">
            </div>
            <div class="mb-3">
                <label for="paid" class="form-label">Pago:</label>
                <input type="text" class="form-control" id="paid" name="paid" value="{{ paid }}">
            </div>
            <a href="/list" class="btn btn-primary">Cancelar</a>
            <button type="submit" class="btn btn-success">Salvar</button>
    </div>
    </form>
</div>
</div>